<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Imageviewcustom"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            android:src="@color/colorPrimary" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                card_view:srcCompat="@drawable/ic_ws" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="35dp"
                android:layout_height="35dp"
                card_view:srcCompat="@drawable/ic_facebook_round_line" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="35dp"
                android:layout_height="35dp"
                card_view:srcCompat="@drawable/ic_twitter" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="35dp"
                android:layout_height="35dp"
                card_view:srcCompat="@drawable/ic_instagram" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/download"
                android:layout_width="35dp"
                android:layout_height="35dp"
                card_view:srcCompat="@drawable/ic_download" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                card_view:srcCompat="@drawable/ic_share" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/favourite"
                android:layout_width="35dp"
                android:layout_height="35dp"
                card_view:srcCompat="@drawable/ic_favorite" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>